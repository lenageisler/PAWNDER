<div id="chat_topic">
  <h1> [AI Chat name or topic in here] </h1>
  <h3>From user: [User Name here]</h3>
</div>

<div id="new_ai_message" class="mt-3">
  <%= render "ai_messages/form", ai_chat: @ai_chat, ai_message:@ai_message %>
<div>

<div>
  <% @ai_chat.ai_messages.each do |ai_message| %>
    <p>
      <strong><%= ai_message.role %></strong>
      <%# kramdown gems are needed for render_markdown method %>
      <%= raw(render_markdown(ai_message.content)) %> <%# implemented in application_helper.rb%>
    </p>
  <% end %>
</div>
