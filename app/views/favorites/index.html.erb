<% if searcher? %>
  <h1>Your favorite dogs</h1>
  <% @favorites.each do |favorite| %>
      <p><%= link_to "#{favorite.dog.name}", dog_path(favorite.dog) %>
      <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, favorite_path(favorite), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{favorite.dog.name} from your favorites?"} %></p>

  <% end %>
<%= link_to '<i class="fa-solid fa-arrow-left"></i> back to all dogs'.html_safe, dogs_path %>
<% end %>
