<%= simple_form_for(dog, html: { id: "dog-form" }) do |f| %>
    <%= f.input :name, required: true %>
    <%= f.input :birthday, as: :date, required: false %>
    <%= f.input :age, required: true %>
    <%= f.input :gender, collection: ["male", "female"], prompt: "Select", required: true %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.input :neutered, as: :boolean, required: false, input_html: { class: "toggle" }  %>
    <%= f.input :breed_grade, collection: ["Pure breed", "Hybrid", "Mix"], prompt: "Select", required: true %>
    <%= f.input :breed_category, collection: [
            "Shepherd-type", "Herding-type", "Retriever-type", "Poudle-type", "Big gentle",
            "Sporty-Hunting-type", "Hound-type", "Spitz-type", "Compact & sturdy",
            "Terrier-type", "Small & fluffy", "Small & slick", "Sausage-type",
            "Medium mixed", "Large mixed", "Small mixed"
        ], prompt: "Select Breed Category", required: true %>
    <%= f.input :main_breed, required: false %>
    <%= f.input :breed_mix, as: :text, required: false %>
    <%= f.input :shoulder_height, required: true %>
    <%= f.input :weight, required: true %>
    <%= f.input :in_shelter_since, as: :date, required: false %>
    <%= f.input :location, collection: ["Shelter", "Foster Care", "Overseas"], prompt: "Select", required: true %>
    <%= f.input :chipped, as: :boolean, required: false, label: "Is the dog chipped?", input_html: { class: "toggle" }  %>
    <%= f.input :health_issus, as: :boolean, required: false, label: "Does the dog have any health issues?", input_html: { class: "toggle" }  %>
    <%= f.input :health_issus_details, as: :text, required: false %>
    <%= f.input :list_dog, as: :boolean, required: false, label: "List dog?", input_html: { class: "toggle" }  %>
    <%= f.input :beginner_friendly, as: :boolean, required: false, label: "Beginner friendly?", input_html: { class: "toggle" }  %>
    <%= f.input :male_compatible, collection: ["yes", "no", "unknown"], prompt: "Select", required: true %>
    <%= f.input :female_compatible, collection: ["yes", "no", "unknown"], prompt: "Select", required: true %>
    <%= f.input :cat_compatible, collection: ["yes", "no", "unknown"], prompt: "Select", required: true %>
    <%= f.input :kids_compatible, collection: ["yes", "no", "unknown"], prompt: "Select", required: true %>
    <%= f.input :ideal_environment, collection: ["Apartment-friendly", "House with garden", "Countryside", "City life", "Quiet environment"], prompt: "Select", required: true %>
    <%= f.input :info, as: :text, required: false, label: "Please describe your dog:" %>

    <%# <%= f.input :image, as: :file %>
    <%= f.submit class: "btn-flat" %>
<% end %>
