<% if user_signed_in? %>
  <% if shelter? %>
      <h1><%= @shelter_name %>, here are your dogs</h1>
      <div class="py-4">
        <div class="row justify-content-center gy-4 gx-4">
          <% @dogs.each do |dog| %>
            <div class="col-12 col-sm-8 col-md-6 col-lg-4 d-flex justify-content-center">
              <%= render "shared/cardindex", dog: dog %>
            </div>
          <% end %>
          <div class="col-12 col-sm-8 col-md-6 col-lg-4 d-flex justify-content-center">
            <div class="col">
              <%= link_to new_dog_path, class: "card add-dog-card d-flex flex-column align-items-center justify-content-center" do %>
                <h3 style="font-size: 50px">+</h3>
                <h3>Add a dog</h3>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  <% if searcher? %>
    <h1>Hi <%= current_user.username %>,<br>here are your<br>matching dogs</h1>
    <div class="py-4">
      <div class="row justify-content-center gy-4 gx-4">
        <% @dogs.each do |dog| %>
          <div class="col-12 col-sm-8 col-md-6 col-lg-4 d-flex justify-content-center">
            <%= render "shared/cardindex", dog: dog %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <h1>Dogs looking for a<br> forever home</h1>
  <div class="py-4">
    <div class="row justify-content-center gy-4 gx-4">
      <% @dogs.each do |dog| %>
        <div class="col-12 col-sm-8 col-md-6 col-lg-4 d-flex justify-content-center">
          <%= render "shared/cardindex", dog: dog %>
        </div>
      <% end %>
    </div>
  </div>

<% end %>
