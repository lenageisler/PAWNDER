<%# <%= link_to '<i class="fa-solid fa-arrow-left"></i> back to home'.html_safe, root_path %>

<% if shelter? %>
    <h1><%= @shelter_name %>, here are your dogs</h1>
<% end %>

<% if searcher? %>
  <h1>Your matching dogs</h1>
  <%# <%= link_to "Checkout your favorite dogs", favorites_path %>
<% end %>

<div class="py-4">
  <div class="row justify-content-center gy-5 gx-5">
    <% @dogs.each do |dog| %>
      <div class="col-12 col-sm-8 col-md-6 col-lg-4 d-flex justify-content-center">
        <%= render "shared/cardindex", dog: dog %>
      </div>
    <% end %>
    <% if shelter? %>
      <div class="col-12 col-sm-8 col-md-6 col-lg-4 d-flex justify-content-center">
        <div class="col">
          <%= link_to new_dog_path, class: "card add-dog-card d-flex flex-column align-items-center justify-content-center" do %>
            <%# <i class="fa-solid fa-plus add-dog-icon mb-3"></i> %>
            <h3 style="font-size: 50px">+</h3>
            <h3>Add a dog</h3>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  </div>
</div>
