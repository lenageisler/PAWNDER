<%= simple_form_for(preference, html: { class: "dog-form" }) do |f| %>
    <div class="dog-form-div" data-controller="toggle-form-div">
        <div class="d-flex justify-content-between align-items-baseline" data-action="click->toggle-form-div#toggle" >
            <p class="headline-preference-div">Basics</p>
            <i data-toggle-form-div-target="plus" class="fa-solid fa-plus"></i>
            <i data-toggle-form-div-target="minus" class="fa-solid fa-minus d-none"></i>
        </div>
        <div data-toggle-form-div-target="body" class="d-none">
            <%= f.input :gender, collection: ["male", "female"],
                required: false, as: :radio_buttons,
                input_html: { class: "tag-selector" },
                item_wrapper_class: 'tag-item' %>

            <p>Age</p>
            <div class="range">
                <%= f.input :age_min, required: false, placeholder: "min", label: false %>
                <p>-</p>
                <%= f.input :age_max, required: false, placeholder: "max", label: false %>
            </div>
        </div>
    </div>

    <div class="dog-form-div" data-controller="toggle-form-div">
        <div class="d-flex justify-content-between align-items-baseline" data-action="click->toggle-form-div#toggle" >
            <p class="headline-preference-div">Breed + Body</p>
            <i data-toggle-form-div-target="plus" class="fa-solid fa-plus"></i>
            <i data-toggle-form-div-target="minus" class="fa-solid fa-minus d-none"></i>
        </div>
        <div data-toggle-form-div-target="body" class="d-none">
            <%= f.input :breed_grade, collection: ["Pure breed", "Hybrid", "Mix"],
                required: false, as: :check_boxes, include_hidden: false,
                input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item',
                label: 'Breed grade<span class="multiple">(multiple)</span>'.html_safe %>
            <%= f.input :breed_category, collection: [
                    "Shepherd-type", "Herding-type", "Retriever-type", "Poudle-type", "Big gentle",
                    "Hound-type", "Sporty-Hunting-type", "Spitz-type", "Compact & sturdy",
                    "Terrier-type", "Small & fluffy", "Small & slick", "Sausage-type",
                    "Medium mixed", "Large mixed", "Small mixed"
                ], required: false, as: :check_boxes, include_hidden: false,
                input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item',
                label: 'Breed categories<span class="multiple">(multiple)</span>'.html_safe %>
            <%# <%= f.input :main_breed, required: false, input_html: { class: "input-field" } %>
            <p>Weight</p>
            <div class="range">
                <%= f.input :weight_min, required: false, placeholder: "min", label: false %>
                <p>-</p>
                <%= f.input :weight_max, required: false, placeholder: "max", label: false %>
            </div>
            <p>Soulder height</p>
            <div class="range">
                <%= f.input :shoulder_height_min, required: false, placeholder: "min", label: false %>
                <p>-</p>
                <%= f.input :shoulder_height_max, required: false, placeholder: "max", label: false %>
            </div>
        </div>
    </div>

    <div class="dog-form-div" data-controller="toggle-form-div">
        <div class="d-flex justify-content-between align-items-baseline" data-action="click->toggle-form-div#toggle" >
            <p class="headline-preference-div">Environment + Experience</p>
            <i data-toggle-form-div-target="plus" class="fa-solid fa-plus"></i>
            <i data-toggle-form-div-target="minus" class="fa-solid fa-minus d-none"></i>
        </div>
        <div data-toggle-form-div-target="body" class="d-none">
            <%= f.input :ideal_environment, collection: ["Apartment-friendly", "House with garden", "Countryside", "City life", "Quiet environment"],
                required: false, as: :check_boxes, include_hidden: false,
                input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item',
                label: 'Providable environment<span class="multiple">(multiple)</span>'.html_safe %>
            <%= f.input :beginner_friendly, as: :boolean, required: false, label: "Beginner friendly dogs", input_html: { class: "toggle" } %>
            <%= f.input :restricted_breed, as: :boolean, required: false, label: "No restricted breed dogs", input_html: { class: "toggle" } %>
        </div>
    </div>

    <div class="dog-form-div" data-controller="toggle-form-div">
        <div class="d-flex justify-content-between align-items-baseline" data-action="click->toggle-form-div#toggle" >
            <p class="headline-preference-div">Compatibilities</p>
            <i data-toggle-form-div-target="plus" class="fa-solid fa-plus"></i>
            <i data-toggle-form-div-target="minus" class="fa-solid fa-minus d-none"></i>
        </div>
        <div data-toggle-form-div-target="body" class="d-none">
            <%= f.input :male_compatible, as: :boolean, required: false, label: "Compatible with male dogs", input_html: { class: "toggle" } %>
            <%= f.input :female_compatible, as: :boolean, required: false, label: "Compatible with female dogs", input_html: { class: "toggle" } %>
            <%= f.input :cat_compatible, as: :boolean, required: false, label: "Compatible with cats", input_html: { class: "toggle" } %>
            <%= f.input :kids_compatible, as: :boolean, required: false, label: "Friendly compatible", input_html: { class: "toggle" } %>
        </div>
    </div>

    <div class="dog-form-div" data-controller="toggle-form-div">
        <div class="d-flex justify-content-between align-items-baseline" data-action="click->toggle-form-div#toggle" >
            <p class="headline-preference-div">Health + Location</p>
            <i data-toggle-form-div-target="plus" class="fa-solid fa-plus"></i>
            <i data-toggle-form-div-target="minus" class="fa-solid fa-minus d-none"></i>
        </div>
        <div data-toggle-form-div-target="body" class="d-none">
            <%= f.input :health_issues, as: :boolean, required: false, label: "Dogs without health issues", input_html: { class: "toggle" } %>
            <%= f.input :neutered, as: :boolean, required: false, input_html: { class: "toggle" }, label: "Neutered/sprayed dogs" %>
            <%= f.input :location, collection: ["Shelter", "Foster Care", "Overseas"],
                required: false, as: :check_boxes, include_hidden: false, label: "Current location",
                input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item',
                label: 'Current location<span class="multiple">(multiple)</span>'.html_safe %>
        </div>
    </div>

    <% if @preference.new_record? %>
        <%= f.submit "Find your perfect dog match", class: "btn-main btn-centered" %>
    <% else %>
        <%= f.submit "Save preference changes", class: "btn-main btn-centered" %>
    <% end %>
<% end %>
