
  <%= link_to chat_path(chat), class: "text-decoration-none text-dark" do%>
    <div class="chat-index-div">
      <div class="d-flex align-items-center">
        <% if chat.dog.photos.attached? %>
              <%= cl_image_tag chat.dog.photos.first.key,
              crop: :thumb, gravity: :auto,
              class: "chat-avatar",
              alt: "#{chat.dog.name} picture" %>
        <% else %>
          <%= image_tag "avatar_placeholder.jpg", class: "chat-avatar", alt: "Avatar" %>
        <% end %>
        <div class="chat-index-div-text">
          <% other_user = searcher? ?  chat.shelter.name : chat.searcher.username  %>
          <h6 class="mb-0 fw-bold"><%= "About #{chat.dog.name} with #{other_user}" %></h6>
          <% if chat.messages.any? %>
          <small class="text-muted"><i><%= "#{chat.messages.last.content.truncate(20)}" %></i></small>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>

