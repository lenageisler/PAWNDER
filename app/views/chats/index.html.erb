<%= link_to '<i class="fa-solid fa-arrow-left"></i> back to home'.html_safe, root_path %>

<h3><%= searcher? ? @searcher_name : @shelter_name %> open chats </h3>

<% @chats.each do |chat| %>
  <%= link_to chat_path(chat), class: "text-decoration-none text-dark" do%>
  <div class="border mb-2">
    <div class="d-flex align-items-center">
      <img src="https://kitt.lewagon.com/placeholder/users/ssaunier" class="img-fluid rounded-circle me-3" width="64" height="64" alt="Avatar">
      <div>
        <% other_user = searcher? ?  chat.shelter.name : chat.searcher.username  %>
        <h6 class="mb-0 fw-bold"><%= "#{chat.dog.name} with #{other_user}" %></h6>
        <% if chat.messages.any? %>
        <small class="text-muted"><i><%= "#{chat.messages.last.content.truncate(15)}..." %></i></small>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
